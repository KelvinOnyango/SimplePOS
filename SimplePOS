    private void jButton19ActionPerformed(java.awt.event.ActionEvent evt) {                                          
        DefaultTableModel df = (DefaultTableModel) jTable1.getModel();
        
        String r = df.getValueAt(jTable1.getSelectedRow(), 0).toString();
        
        int rw = jTable1.getSelectedRow();
        df.removeRow(rw);
        
        switch(r) {
            case "1":
                q1.setText("0");
                break;
                
            case "2":
                q2.setText("0");
                break;
                
            case "3":
                q3.setText("0");
                break;
                
            case "4":
                q4.setText("0");
                break;
                
            case "5":
                q5.setText("0");
                break;
                
            case "6":
                q6.setText("0");
                break;

            case "7":
                q7.setText("0");
                break;

            case "8":
                q8.setText("0");
                break;

            case "9":
                q9.setText("0");
                break;

            default: 
                System.out.println("Over");
        }
        
        
    }                                         

    private void jButton18ActionPerformed(java.awt.event.ActionEvent evt) {                                          
        double tot = Double.valueOf(total.getText());
        double paid = Double.valueOf(pay.getText());
        double balance = paid - tot;
        
        DecimalFormat df = new DecimalFormat("00.00");
        
        bal.setText(df.format(balance));
    }                                         

    private void jButton7ActionPerformed(java.awt.event.ActionEvent evt) {                                         
       try {
    StringBuilder textBuilder = new StringBuilder();
    textBuilder.append("                        NOSL RESTAURANT\n");
    textBuilder.append("                  1106/Pioneer\n");
    textBuilder.append("                  0712345678\n");
    textBuilder.append("--------------------------------------\n");
    textBuilder.append(" Item \t\tQty \tPrice\n");
    textBuilder.append("--------------------------------------\n");

    DefaultTableModel df = (DefaultTableModel) jTable1.getModel();
    for (int i = 0; i < jTable1.getRowCount(); i++) {
        String Name = df.getValueAt(i, 1).toString();
        String Qty = df.getValueAt(i, 2).toString();
        String Price = df.getValueAt(i, 3).toString();
        textBuilder.append(" ").append(Name).append("\t").append(Qty).append("\t").append(Price).append("\n");
    }

    textBuilder.append("--------------------------------------\n");
    textBuilder.append("Sub Total : ").append(total.getText()).append("\n");
    textBuilder.append("cash      : ").append(total.getText()).append("\n");
    textBuilder.append("Balance   : ").append(total.getText()).append("\n");
    textBuilder.append("-------------------------------------------\n");
    textBuilder.append("Thanks for your Business !...\n");
    textBuilder.append("-------------------------------------------\n");
    textBuilder.append("               Software by NOSL.ltd");

    d.setText(textBuilder.toString());
} catch (Exception e) {
    e.printStackTrace();
}



           
       
    }                                        

