    private void jButton4ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        int i = Integer.valueOf(q4.getText());
        ++i;
        q4.setText(String.valueOf(i));
        addTable(4, "Chipsmeat", i, 350.0);
        
        cal();
    }                                        

